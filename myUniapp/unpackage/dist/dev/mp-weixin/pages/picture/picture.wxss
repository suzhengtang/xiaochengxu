page {
  height: 100%;
}
.picture {
  width: 750rpx;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #666;
  font-size: 30rpx;
  background-color: #eee;
}
.picture .left {
  width: 200rpx;
  height: 100%;
  border-right: 1px solid #ddd;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.picture .left .left-item {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  border-bottom: 1px solid #ddd;
  text-align: center;
}
.picture .left .current {
  background-color: #ed7043;
  color: #fff;
}
.picture .right {
  width: 550rpx;
  height: auto;
  padding: 10rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.picture .right .right-item {
  width: 55orpx;
  background-color: #fff;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}
.picture .right .right-item .item-dir {
  padding: 0 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.picture .right image {
  width: 550rpx;
}

