.about-me {
  width: 100%;
  height: auto;
}
.about-me .me-img {
  width: 100%;
  height: 375rpx;
  overflow: hidden;
}
.about-me .me-img image {
  width: 100%;
}
.about-me .me-phone,
.about-me .me-address {
  width: 100%;
  padding-left: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  color: #666;
  font-size: 30rpx;
  border-bottom: 1px solid #ddd;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.about-me .me-address {
  line-height: 46rpx;
  height: auto;
}
.about-me .me-map {
  width: 750rpx;
  height: 750rpx;
}
.about-me .me-map .me-map-map {
  width: 750rpx;
  height: 750rpx;
}

